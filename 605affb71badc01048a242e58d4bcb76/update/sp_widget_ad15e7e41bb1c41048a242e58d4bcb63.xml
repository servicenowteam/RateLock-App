        <template><![CDATA[<div aria-label="${Page breadcrumbs}" role="navigation">
  <ul class="nav nav-pills nav-sm">
    <li>
      <span><a ng-class="{'a-disabled': !c.canNavigate}" ng-href="{{ c.getBreadcrumbHomePage() }}">${Home}</a>
        <i aria-hidden="true" class="fa fa-chevron-right"></i></span>
    </li>
    <li ng-if="!c.expanded && c.breadcrumbs && c.breadcrumbs.length > 2">
      <span><a ng-click="c.expand()"><i class="fa fa-ellipsis-h" aria-hidden="true"></i></a>
        <i aria-hidden="true" class="fa fa-chevron-right"></i></span>
    </li>
    <li ng-if="!c.breadcrumbs"><span>
        <a style="display: inline;" class="a-disabled" aria-current="page" href>{{page.title}}</a></span></li>
    <li
      ng-if="c.expanded || ((c.breadcrumbs.length > 2  && $index > c.breadcrumbs.length-3) || (c.breadcrumbs.length <= 2))"
      ng-repeat="item in c.breadcrumbs track by $index">
      <span>
        <a ng-if="!$last" ng-href="{{ c.getBreadcrumbUrl(item.url) }}"
          ng-class="{'a-disabled': !c.canNavigate}">{{item.label}}</a>
        <a class="a-disabled" ng-if="$last" aria-current="page" href>{{item.label}}</a>
        <i aria-hidden="true" ng-if="!$last" class="fa fa-chevron-right"></i>
      </span>
    </li>
  </ul>
</div>]]></template>
