        <client_script><![CDATA[function ratelockBreadcrumbs($scope, $rootScope, spUtil) {
  var c = this;
  c.canNavigate = true;
  c.expanded = !spUtil.isMobile();
  c.expand = function () {
    c.expanded = true;
  };

  var deregister = $rootScope.$on("sp.update.breadcrumbs", function (e, list) {
    c.breadcrumbs = list;
  });

  $rootScope.$on('ratelock.sidebar.changes', function (e, hasChanges) {
    c.canNavigate = !hasChanges;
  });

  c.getBreadcrumbUrl = function (url) {
    if (c.canNavigate) return url;
  };

  c.getBreadcrumbHomePage = function () {
    if (c.canNavigate) return '?id=' + $scope.portal.homepage_dv;
  };

  $scope.$on('$destroy', function () {
    deregister();
  });

}]]></client_script>
