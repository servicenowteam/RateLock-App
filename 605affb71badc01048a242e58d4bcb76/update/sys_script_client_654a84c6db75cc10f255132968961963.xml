        <messages/>
        <name>onChange LoanNumber</name>
        <order/>
        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading, isTemplate) {
   if (isLoading) {
      return;
   }
   var num = (g_form.getValue('request_type') === "2" || g_form.getValue('request_type') === '6') ? "9" : "7";
   var reg = new RegExp('^[\\d]{' + num + '}$', 'gi');
   
   if (reg.test(newValue) || newValue === '') {
	   g_form.hideFieldMsg('loan_number');
	   g_form.save(); 
   } else {
	   g_form.showFieldMsg('loan_number', "You must have " + num + " digits in your loan number", 'error');
   }
   
}]]></script>
