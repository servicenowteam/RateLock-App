        <script><![CDATA[var loan_number;
if (/[\d]{7}/gi.test(email.subject)) {
  loan_number = getLoanNumber(email.subject);
} else if (/[\d]{7}/gi.test(email.body_text)) {
  loan_number = getLoanNumber(email.body_text);
} else if (/[\d]{10}/gi.test(email.subject, true)) {
  loan_number = getLoanNumber(email.subject);
} else if (/[\d]{10}/gi.test(email.body_text))  {
  loan_number = getLoanNumber(email.body_text, true);
}
  

if (!/[\d]{7}/gi.test(loan_number) && !/[\d]{10}/gi.test(loan_number)) {
  loan_number = null;
}
if (loan_number) {
  current.addQuery('loan_number', loan_number);
  current.addQuery('active', true);
  current.query();
  if (current.next()) {
    current.comments = '[code]' + email.body_html + '[/code]';
    current.setValue('watch_list', getWatchList());
    current.update();
  }
}


function getLoanNumber(message, useQuantifier10) {
  var regex;
  if (useQuantifier10) {
    regex = /.*(?=([\d]{10})).*/gm;
  } else {
    regex = /.*(?=([\d]{7})).*/gm;
  }
  
  var matches = regex.exec(message);
  if (matches.length > 0) {
    for (var i = 0; i < matches.length; i++) {
      if (!useQuantifier10 && /^[\d]{7}$/gm.test(matches[i])) {
        return matches[i].trim();
      } else if (useQuantifier10 && /^[\d]{10}$/gm.test(matches[i])) {
        return matches[i].trim();
      }
    }
  }
  return;
}

function getWatchList() {
  var excluded = ['ratelock@movement.com', 'lock911@movement.com', 'tporatelock@movement.com'];
  var groups = new GlideRecord('sys_user_group');
  groups.addEncodedQuery('active=true^emailIN' + email.recipients);
  groups.query();
  while (groups.next()) {
    excluded.push(groups.getValue('email'));
  }
  var recipients_array = email.recipients.split(',');
  var filtered = recipients_array.filter(function (em) {
    for (var i = 0; i < excluded.length; i++) {
      if (excluded[i] == em) {
        return false;
      }
    }
    return true;
  });

  if (gs.nil(current.watch_list)) return filtered.join(',');

  if (filtered.length > 0) {
    return current.watch_list + ',' + filtered.join(',');
  }

  return filtered.join(',');
}]]></script>
